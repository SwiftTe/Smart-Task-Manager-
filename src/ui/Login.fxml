<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="src.controller.AuthController">
    <children>
        <Label layoutX="120" layoutY="20" text="Login to Task Manager" />
        <Label layoutX="80" layoutY="70" text="Username" />
        <TextField fx:id="usernameField" layoutX="150" layoutY="70" />

        <Label layoutX="80" layoutY="110" text="Password" />
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="110" />

        <Button text="Login" layoutX="150" layoutY="160" onAction="#handleLogin" />
        <Button text="Register" layoutX="220" layoutY="160" onAction="#openRegister" />
    </children>
</AnchorPane>
